#set $mod Mod1
set $mod Mod4
set $output1 "DP-1"
set $output2 "HDMI-1"
set $output0 "eDP-1"

### default window borders
new_window 1pixel
new_float 1pixel

### custom bindings
bindsym --whole_window Control_L+button1 kill
bindsym $mod+button7 exec xterm
bindsym $mod+button6 workspace prev
bindsym $mod+t border normal
bindsym $mod+Shift+t border 1pixel
bindsym F10 exec --no-startup-id amixer sset Master toggle
bindsym F12 exec --no-startup-id amixer sset Master 10%+
bindsym F11 exec --no-startup-id amixer sset Master 10%-
bindsym XF86AudioMute exec --no-startup-id amixer sset Master toggle
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer sset Master 10%+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer sset Master 10%-
bindsym $mod+Return exec --no-startup-id urxvt
bindsym $mod+Shift+Return exec --no-startup-id urxvt -rv
bindsym $mod+Shift+grave move scratchpad
bindsym $mod+grave scratchpad show
bindsym $mod+Shift+Left move workspace to output left
bindsym $mod+Shift+Right move workspace to output right 
bindsym mod1+Shift+l exec $HOME/bin/lock

### Two displays, HDMI and DP-1
#exec_always xrandr --output DP-1 --left-of HDMI-1 --auto --rotate left
#exec_always xrandr --output eDP-2 --left-of DP-1 --auto
#exec_always xrandr --output HDMI-1 --right-of DP-1 --auto

### Two displayed DP-1 and HDMI 
exec xrandr --output eDP-1 --left-of HDMI-1 --auto
exec xrandr --output HDMI-1 --left-of DP-1 --auto 
exec xrandr --output DP-1 --right-of HDMI-1 --auto 
exec xrandr --output HDMI-1 --left-of DP-1 --auto --rotate left

### Two displays, HDMI and DP-2
#exec xrandr --output DP-2 --left-of HDMI-1 --auto --rotate left
#exec xrandr --output eDP-2 --left-of DP-2 --auto
#exec xrandr --output HDMI-1 --right-of DP-2 --auto

#exec xrandr --output eDP-2 --off
workspace_auto_back_and_forth yes

### set workspace names
set $main "1:main"
set $mail "2:email"
set $sub "3:sub"
set $man "4:vman"
set $vm "7:vm"
set $rdp "8:rdp"
set $tvc "9:tvc"
set $gut "11:gutter"
set $invalid "12:INVALID"

### workspace assignments
workspace $invalid output $output0
workspace $main output $output1 
workspace $sub output $output2
workspace $mail output $output2
workspace $man output $output2
workspace $gut output $output2
#workspace $sub output DP-2
#workspace $mail output DP-2
#workspace $man output DP-2
#workspace $gut output DP-2
#workspace $vman output DP-2
workspace $vm output $output1 
workspace $rdp output $output1 
workspace $tvc output $output1 
exec i3-msg "workspace 1"

# switch to workspace
bindsym $mod+1 workspace $main
bindsym $mod+2 workspace $mail
bindsym $mod+3 workspace $sub
bindsym $mod+4 workspace $man
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace $vm
bindsym $mod+8 workspace $rdp
bindsym $mod+9 workspace $tvc
bindsym $mod+0 workspace $gut

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $main
bindsym $mod+Shift+2 move container to workspace $mail
bindsym $mod+Shift+3 move container to workspace $sub
bindsym $mod+Shift+4 move container to workspace $man
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace $vm
bindsym $mod+Shift+8 move container to workspace $rdp
bindsym $mod+Shift+9 move container to workspace $tvc
bindsym $mod+Shift+0 move container to workspace $gut



floating_maximum_size 1080 x 1080
### establish workspace layouts
#exec_always --no-startup-id i3-msg 'workspace $gut; layout splitv'
#exec_always --no-startup-id i3-msg 'workspace $tvc; layout tabbed'
exec_always --no-startup-id i3-msg 'workspace $rdp; layout tabbed'
exec_always --no-startup-id i3-msg 'workspace $vm; layout tabbed'

### set window assignments
for_window [class="XCalc" instance="xcalc"] floating enable
for_window [class="Tk" title="tk"] floating enable
for_window [class="Remmina" title="Remmina Remote Desktop Client"] floating enable
#assign [class="Remmina" title="^R.*"] $rdp
assign [class="Remmina" title="^1.*"] $rdp
assign [class="Virt-manager" title="Virtual Machine Manager"] $gut
assign [class="Virt-manager" title="virt-manager"] $vm
assign [class="Virt-manager" title=".*QEMU/KVM"] $vm
assign [class="Virt-manager" title="host01 on QEMU/KVM"] $vm
assign [class="Vmplayer" title=".*VMware Workstation.*"] $vm
for_window [class="Virt-manager" title="Virtual Machine Manager"] floating enable, floating_maximum_size 200 x 200
for_window [class="Virt-manager" title="Virtual Machine Manager"] floating_maximum_size 200 x 200
for_window [class="Thunderbird" instance="Mail" window_role="messageWindow"] floating enable
for_window [class="Thunderbird" instance="Msgcompose" window_role="Msgcompose"] floating enable
for_window [class="Thunderbird" instance="Calendar" window_role="EventDialog"] floating enable
for_window [title="Download Manager.*"] floating enable
for_window [class="Keepassx2"] floating enable, floating_maximum_size 200 x 200
#assign [class="Evolution"] $mail
assign [class="Thunderbird"] $mail
assign [class="xfreerdp" title=".*AMC-RDUNN-VM"] $gut
assign [class="xfreerdp" instance="xfreerdp"] $rdp
#for_window [class="xfreerdp" instance="xfreerdp"] move absolute position 1280 0
for_window [class="xfreerdp" instance="xfreerdp"] floating disable, i3-msg 'workspace $rdp'

# control the TeamViewer Contacts window
assign [class="Wine" title="Computers & Contacts"] $gut
# control the TeamViewer connection dialog window
assign [class="Wine" title="^TeamViewer"] $gut
# control the TeamViewer remote session window
assign [class="Wine" title=".*Teamviewer.*"] $tvc
#for_window [class="Wine" title="^[0-9]"] floating enable

#for_window [class="Wine" title="TeamViewer"] floating disable

#for_window [class="Wine" instance="TeamViewer.exe"] move absolute position 1280 0
#for_window [class="Wine" title="TeamViewer"] floating enable
for_window [class="Wine" title="Computers & Contacts"] floating enable; floating_maximum_size 200x200

for_window [class="feh" instance="feh"] floating enable; floating_maximum_size 800 x 600

